header.header
  nav#mainNav.navbar.navbar-toggleable-sm.navbar-light
    .container.nav__container
      .row.navbar__row.justify-content-between.justify-content-md-start.navbar__row.align-items-center
        .col-10.col-sm-6.col-md-6.hidden-md-up
          button.hidden-lg-up.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        .col-sm-10.col-md-6.col-lg-5.hidden-sm-down.flex-lg-first
          .logo__text!=content.site.nav.logo
        .col-14.col-sm-8.col-md-18.col-lg-6.col-xl-5.flex-sm-last
          .nav__contact.ml-auto
            a.nav__btn(data-toggle="modal", href="#call__modal")
              i.ic.ic--phone
              .nav__contact--text!=content.site.nav.btn.text
        .col.flex-md-last.flex-lg-first
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.nav-fill.w-100
              each item, i in content.site.nav.links
                li.nav-item
                  a.nav-link.nav__link(class={"nav-link--active": i === 0}, href=item.href)!= item.name
                    if (i === 0) 
  .container.header__container
    .row.header__row.d-flex.align-items-lg-center
      .col-24.col-lg-12
        .row
          .col-24
            h1.header__title!=content.indexd.header.title
          .col-24
            h2.header__subtitle!=content.indexd.header.subtitle
      .col-24.col-md-16.offset-md-4.col-lg-12.offset-lg-0
        .header__form
          .delivery__title!=content.indexd.header.form.title   
          form.contact__form.contactForm(method='post', action='./mail/mail.php')
            .row
              .col-24.form-group.form__group 
                input.form-control.form__input.form__phone(aria-invalid='false', placeholder="Введите ваше имя", name='name', type='text', required)
              .col-24.form-group.form__group 
                input.form-control.form__input.form__input--phone.form__phone(aria-invalid='false', placeholder="Введите ваш телефон", name='phone', type='tel', required)  
              .col-24    
                button.button.button--size.form__btn(name='form', value='динамика цен', type='submit', data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Файл отправляется...")!=content.indexd.header.form.btn 