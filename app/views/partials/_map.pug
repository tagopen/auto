section.map
  .container
    .row.justify-content-end
      .col-24.col-md-12
        .map__box.d-flex.align-items-center
          .row
            .col-24.col-md-5.col-lg-3.d-flex.align-items-center
              .map__icon
                i.ic.ic--map
